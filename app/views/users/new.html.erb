<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:user_username, "Username: ")%>
  <%= text_field(:user, :username)%><br>
  <%= label_tag(:user_email, "Email: ")%>
  <%= text_field(:user, :email)%><br>
  <%= label_tag(:user_password, "Password: ")%>
  <%= text_field(:user, :password)%><br>
  <%= submit_tag("Submit") %>

<% end %>
